<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".Request_for_plateletActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/requestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/request5"
        android:textColor="#D32F2F"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toggle: Blood | Platelets -->
    <LinearLayout
        android:id="@+id/typeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"

        android:padding="2dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/requestTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Submit Button -->
        <Button
            android:id="@+id/Submit_Platelet_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F8F3F3"
            android:paddingVertical="12dp"
            android:text="@string/blood"
            android:textColor="#686666"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,VisualLintButtonSize" />



        <!-- Submit Button -->
        <Button
            android:id="@+id/Submit_Platelet_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D32F2F"
            android:text="@string/platelet"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            tools:ignore="ButtonStyle,DuplicateIds,VisualLintButtonSize" />
    </LinearLayout>

    <!-- Platelet Donation Requirements -->
    <LinearLayout
        android:id="@+id/requirementsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFF5F5"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/typeToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/platelet_donation_requirements"
            android:textColor="#A80000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_18_60_and_weight_50kg_n_must_be_healthy_and_fit_n_2_weeks_gap_between_platelet_donations_n_no_infection_fever_or_recent_surgery"
            android:textColor="#5A5A5A"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Scrollable Form Section -->
    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/requirementsCard"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="enter_name"

                android:hint="@string/enter_name"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textSize="14sp"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Blood Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blood_type1"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/spinnerBloodType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="12dp"
                android:minHeight="48dp"
                android:padding="12dp"
                tools:ignore="HardcodedText" />

            <!-- Quantity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quantity1"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="enter_quantity_in_units"

                android:hint="@string/enter_quantity_in_units"
                android:inputType="number"
                android:padding="12dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number1"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="enter_phone_number"

                android:hint="@string/enter_phone_number"
                android:inputType="phone"
                android:padding="12dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Urgency -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/urgency"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputUrgency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="enter_urgency"

                android:hint="@string/enter_urgency"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Hospital Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hospital_name"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:autofillHints="enter_hospital_name1"

                android:hint="@string/enter_hospital_name1"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize" />

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:autofillHints="enter_location1"

                android:hint="@string/enter_location1"
                android:inputType="text"
                android:padding="12dp"
                android:textColorHint="#546E7A"
                tools:ignore="VisualLintTextFieldSize,TextContrastCheck" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/Submit_Platelet_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit_request1"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingVertical="12dp"
                tools:ignore="DuplicateIds,VisualLintButtonSize" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navHome"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:background="@null"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/material_symbols_home_outline_rounded"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navRequest"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:background="@null"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/request_icon"
                app:tint="#CE3333"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navEmergency"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:background="@null"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/humbleicons_aid"
                app:tint="#121212"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/navProfile"
                android:layout_width="42dp"
                android:layout_height="41dp"
                android:background="@null"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                android:src="@drawable/iconamoon_profile__1_"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
