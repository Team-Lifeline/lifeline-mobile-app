<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".DonorProfileActivity">

    <!-- ---------- SCROLLABLE CONTENT ---------- -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- ---------- TITLE ---------- -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor Profile"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginTop="16dp" />

            <!-- ---------- SUBTITLE ---------- -->
            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Become a Lifesaver"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Your donation can save up to 3 lives. Thank you for your kindness"
                android:textColor="#666666"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <!-- ---------- NAME ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter your name"
                android:padding="10dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- ---------- BLOOD TYPE ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <Spinner
                android:id="@+id/spinnerBloodType"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:spinnerMode="dropdown" />

            <!-- ---------- AGE ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="number"
                android:hint="Enter your age"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- ---------- GENDER ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editGender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:hint="Enter your gender"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- ---------- PHONE ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="phone"
                android:hint="Enter your phone number"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- ---------- EMAIL ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="textEmailAddress"
                android:hint="Enter your email"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- ---------- PREFERRED LOCATION ---------- -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preferred Location"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:hint="Search Location"
                android:textColor="#000"
                android:textSize="14sp" />

            <!-- ---------- REGISTER BUTTON ---------- -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#D32F2F"
                android:text="Register to Donate"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ---------- BOTTOM NAVIGATION BAR ---------- -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/house" />
            <TextView
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navDonate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/request_for_proposal" />
            <TextView
                android:text="Donate"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navEmergency"
                android:layout_width="17dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/search__1_"
                android:tint="#121111" />
            <TextView
                android:text="Emergency"
                android:textSize="12sp"
                android:textColor="#D32F2F" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/emergency" />
            <TextView
                android:text="Search"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/account" />
            <TextView
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

