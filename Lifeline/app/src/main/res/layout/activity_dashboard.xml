<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center_vertical|space_between"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:text="                           Lifeline"
            android:textColor="#E53935"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="Profile"
            android:src="@drawable/people"
            android:tint="#E53935" />
    </LinearLayout>

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Urgent Blood Needed Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:elevation="3dp"
                android:padding="0dp"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/bannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#E53935"
                    android:scaleType="centerCrop"
                    android:src="@drawable/frame29" />

                <TextView
                    android:id="@+id/tvUrgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Urgent Blood Needed"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btnViewRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Request"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E53935"
                    android:layout_margin="16dp"
                    android:paddingVertical="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:gravity="center"
        android:elevation="8dp">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/house"
                android:tint="#0D0B0B" />
            <TextView
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#E53935"/>
        </LinearLayout>

        <!-- Donate -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/request_for_proposal"
                android:tint="#000000" />
            <TextView
                android:text="Donate"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Emergency -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search__1_"
                android:tint="#000000" />
            <TextView
                android:text="Emergency"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/emergency"
                android:tint="#000000" />
            <TextView
                android:text="Search"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account"
                android:tint="#000000" />
            <TextView
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
