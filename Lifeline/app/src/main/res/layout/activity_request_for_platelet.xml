<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".PlateletRequestActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/requestTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Request"
        android:textColor="#D32F2F"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Toggle: Blood | Platelets -->
    <LinearLayout
        android:id="@+id/typeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/toggle_bg"
        android:padding="2dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/requestTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="40dp"
            android:paddingVertical="8dp"
            android:text="Blood"
            android:textColor="#888888"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tabPlatelets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selected_bg"
            android:paddingHorizontal="40dp"
            android:paddingVertical="8dp"
            android:text="Platelets"
            android:textColor="#F44336"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Platelet Donation Requirements -->
    <LinearLayout
        android:id="@+id/requirementsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="#FFF5F5"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/typeToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platelet Donation Requirements"
            android:textColor="#A80000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Age 18–60 and weight 50kg+\n• Must be healthy and fit\n• 2 weeks gap between platelet donations\n• No infection, fever, or recent surgery"
            android:textColor="#5A5A5A"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Scrollable Form Section -->
    <ScrollView
        android:id="@+id/formScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/requirementsCard"
        app:layout_constraintBottom_toTopOf="@id/bottomNavBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Blood Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Type"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerBloodType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:prompt="Select your blood type" />

            <!-- Quantity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Quantity (in units)"
                android:background="@drawable/input_bg"
                android:inputType="number"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Phone Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:background="@drawable/input_bg"
                android:inputType="phone"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Urgency -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Urgency"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputUrgency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Urgency"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Hospital Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Name"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Hospital Name"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/inputLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Location"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:layout_marginBottom="24dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submitRequestBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Request"
                android:backgroundTint="#D32F2F"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingVertical="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FFFFFF"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/house" />
            <TextView
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navDonate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/request_for_proposal" />
            <TextView
                android:text="Donate"
                android:textSize="12sp"
                android:textColor="#D32F2F" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navEmergency"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/emergency" />
            <TextView
                android:text="Emergency"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navSearch"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/search__1_" />
            <TextView
                android:text="Search"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/navProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/account" />
            <TextView
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
